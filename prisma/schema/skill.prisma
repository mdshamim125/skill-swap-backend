model Skill {
  id           String     @id @default(uuid())
  title        String     @unique
  category     String
  description  String?
  level        SkillLevel @default(BEGINNER)
  pricePerHour Int?
  tags         String[]   @default([])
  isPublished  Boolean    @default(true)
  createdAt    DateTime   @default(now())

  // ADMIN skill or custom user skill
  isCustom     Boolean @default(false)

  // If created by user (custom), else null for admin-created skills
  createdBy    String?

  // When user offers their own custom skill
  ownerId  String?
  owner    User?     @relation("UserOfferedSkills", fields: [ownerId], references: [id], onDelete: Cascade)

  // Profile can pick skills
  profiles Profile[] @relation("ProfileSkills")

  bookings Booking[]

  @@index([category])
}